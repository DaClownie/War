        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:War"
        mc:Ignorable="d"
        Title="WAR Simulator" 
		Height="600"
		Width="1000"
		ResizeMode="NoResize"
		WindowStyle="None" 
		Background="#37465B" 
		WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown">
