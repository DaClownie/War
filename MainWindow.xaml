	<Grid>
		<!-- Initial layout definitions -->
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<!--Window Bar containing name/navigation/close/minimize -->
		<Grid Background="#212A36"
			   Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<TextBlock Text="WAR Simulator"
					   Foreground="White"
					   Grid.Column="0"
					   Grid.ColumnSpan="2"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   FontFamily="Fonts/#Karla"
					   FontWeight="Medium"
					   FontSize="18"/>

			<Button    Content="Config"
					   BorderThickness="0"
					   Grid.Column="2"
					   Grid.ColumnSpan="2"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   FontFamily="Fonts/#Karla"
					   FontWeight="Light"
					   FontSize="16"
					   Padding="5"
					   Style="{StaticResource buttonStyle}"/>

			<Button	   Content="Results"
					   BorderThickness="0"
					   Grid.Column="4"
					   Grid.ColumnSpan="2"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   FontFamily="Fonts/#Karla"
					   FontWeight="Light"
					   FontSize="16"
					   Padding="5"
					   Style="{StaticResource buttonStyle}"/>

			<Button    Content="GitHub"
					   BorderThickness="0"
					   Grid.Column="11"
					   Grid.ColumnSpan="2"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   FontFamily="Fonts/#Karla"
					   FontWeight="Light"
					   FontSize="18"
					   Padding="5"
					   Style="{StaticResource buttonStyle}"/>

			<StackPanel Grid.Column="12"
						Grid.ColumnSpan="2"
						Orientation="Horizontal"
						HorizontalAlignment="Right"
						Margin="0,5,0,5">

				<Button x:Name="TopRightMinimize"
						FontFamily="Fonts/#Karla"
						FontSize="20"
						FontWeight="Heavy"
						BorderThickness="2"
						Margin="0,0,5,0"
						Width="30"
						Height="30"	
						Click="MinimizeOnClick"
						IsTabStop="False"
						Style="{StaticResource buttonStyle}">
					<Button.Content>
						_
					</Button.Content>
				</Button>
				<Button x:Name="TopRightClose" 
						FontFamily="Fonts/#Karla"
						FontSize="20"
						FontWeight="Heavy"
						BorderThickness="2"
						Margin="0,0,5,0"
						Width="30"
						Height="30" 
						Click="CloseOnClick"
						IsTabStop="False"
						Style="{StaticResource buttonStyle}">
					<Button.Content>
						X
					</Button.Content>
				</Button>
			</StackPanel>
		</Grid>


		<StackPanel Grid.Row="2"
					Grid.Column="0"
					Margin="10">
			<Label Style="{StaticResource headerFont}">Input Options:</Label>
			<StackPanel>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="2*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="50"/>
						<RowDefinition Height="50"/>
					</Grid.RowDefinitions>

					<Label Grid.Row="0"
						   Grid.Column="0"
						   VerticalAlignment="Center"
						   HorizontalAlignment="Right"
						   Style="{StaticResource subHeaderFont}">
						Number of Games:
					</Label>
					<TextBox Grid.Row="0"
							 Grid.Column="1"
							 VerticalAlignment="Center"
							 HorizontalAlignment="Stretch"
							 Margin="10">
					</TextBox>

					<Label Grid.Row="1"
						   Grid.Column="0"
						   VerticalAlignment="Center"
						   HorizontalAlignment="Right"
						   Style="{StaticResource subHeaderFont}">
						Jokers wild?:
					</Label>
					<CheckBox Grid.Row="1"
							  Grid.Column="1"
							  VerticalAlignment="Center"
							  Margin="10" RenderTransformOrigin="0.5,0.5"/>
				</Grid>
			</StackPanel>
			<StackPanel>
				<Expander HorizontalContentAlignment="Stretch">
					<Expander.Header>
						<BulletDecorator>
