			</StackPanel>
		</StackPanel>
		<StackPanel Grid.Row="2"
					Grid.Column="1"
					Margin="10">
			<Label Style="{StaticResource headerFont}">Output Options:</Label>
			<StackPanel>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="3*"/>
					</Grid.ColumnDefinitions>
				</Grid>
			</StackPanel>
		</StackPanel>

	</Grid>
</Window>
